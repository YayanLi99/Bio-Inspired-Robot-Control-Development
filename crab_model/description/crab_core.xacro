<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Import Rviz colors -->
    <xacro:include filename="colors.xacro"/>
    <xacro:include filename="inertial_macros.xacro"/>
    <xacro:include filename="crab_properties.xacro"/>

    <!-- Wrold LINK -->

    <link name = "world"></link>

    <!-- BASE FOODPRINT AND JOINT -->

    <joint name = 'base_footprint_joint' type = "fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="world"/>
        <child link="base_footprint"/>
    </joint>

    <link name="base_footprint"></link>


    <!-- BODY LINK AND JOINT -->

    <joint name="body_joint" type="fixed">
        <origin xyz="0.0 0.0 ${body_link_height}" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="body_link"/>
    </joint>

    <link name="body_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.2 0.0"/>
            <geometry>
                <box size="${body_link_x_dim} ${body_link_y_dim} ${body_link_z_dim}"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <!-- COXA LINK AND JOINTS -->
    <joint name="coxa_joint_L" type="revolute">
        <origin xyz="${coxa_joint_Ox} ${coxa_joint_Oy} ${coxa_joint_Oz}" rpy="0.0 -${pi/2} 0.0"/>
        <parent link="body_link"/>
        <child link="coxa_link_L"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="coxa_link_L">
        <visual>
            <origin xyz="${coxa_link_Ox} ${coxa_link_Oy} ${coxa_link_Oz}" rpy="0.0 ${coxa_link_Ry} 0.0"/>
            <geometry>
                <cylinder length="${coxa_link_length}" radius="${coxa_link_radius}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <xacro:inertial_cylinder mass="${coxa_link_mass}" length="${coxa_link_length}" radius="${coxa_link_radius}">
            <origin xyz="${coxa_link_Ox} ${coxa_link_Oy} ${coxa_link_Oz}"/>
        </xacro:inertial_cylinder>
    </link>



